{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Android (NDK)",
      "type": "shell",
      "command": "ndk-build",
      "args": [
        "NDK_PROJECT_PATH=${workspaceFolder}"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "Build Windows (MinGW)",
      "type": "shell",
      "command": "mingw32-make",
      "args": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "new"
      }
    },
    {
      "label": "Clean All",
      "type": "shell",
      "command": "PowerShell",
      "args": [
        "-c",
        "mingw32-make clean; ndk-build NDK_PROJECT_PATH=${workspaceFolder} clean"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    }
  ]
}
